{
  "name": "@sha-bang/wa-mcp",
  "version": "1.2.0",
  "description": "Local MCP server for Web Awesome components",
  "main": "dist/index.js",
  "bin": {
    "wa-mcp": "dist/index.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "postbuild": "chmod +x dist/index.js",
    "sync-readme": "cp ../../README.md .",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "test": "vitest run",
    "lint": "eslint src/**/*.ts --fix",
    "fetch-data": "tsx scripts/fetch-components.ts",
    "release": "semantic-release"
  },
  "keywords": [
    "mcp",
    "web-awesome",
    "components"
  ],
  "author": "",
  "license": "MIT",
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "gray-matter": "^4.0.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.2.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.1.5",
    "@types/node": "^20.11.24",
    "cheerio": "^1.0.0-rc.12",
    "eslint": "^9.38.0",
    "semantic-release": "^25.0.1",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vitest": "^4.0.6"
  }
}
