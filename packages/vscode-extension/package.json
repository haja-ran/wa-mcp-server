{
  "name": "wa-mcp",
  "displayName": "Web Awesome MCP",
  "publisher": "shabang",
  "description": "VSCode extension that provides the Web Awesome MCP server. Requires the @sha-bang/wa-mcp package to be installed separately.",
  "license": "ISC",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Web Awesome MCP",
      "properties": {
        "mcp.servers.wa-mcp": {
          "type": "object",
          "default": {
            "command": "wa-mcp",
            "args": []
          },
          "description": "Configuration for the Web Awesome MCP server. The server provides tools for Web Awesome components."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "node ./out/test/runTest.js",
    "package": "npm run compile && node package-script.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "18.x",
    "eslint": "^8.0.0",
    "@antfu/eslint-config": "^6.2.0",
    "typescript": "^5.0.0",
    "@vscode/test-electron": "^2.3.0"
  }
}